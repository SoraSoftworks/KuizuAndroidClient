<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="eliteheberg.sora.org.kuizu.GameActivity"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Round I"
            android:id="@+id/game_tv_round"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="28dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score"
            android:id="@+id/game_tv_score"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="35dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/game_tv_question"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Answer 1"
        android:id="@+id/game_btn_resp1"
        android:background="@drawable/button_normal"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Answer 2"
        android:id="@+id/game_btn_resp2"
        android:background="@drawable/button_normal"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Answer 3"
        android:id="@+id/game_btn_resp3"
        android:background="@drawable/button_normal"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2" />

    <eliteheberg.sora.org.kuizu.ProgressWheel
        android:id="@+id/game_pb_time"
        android:layout_width="125dp"
        android:layout_height="124dp"
        android:layout_centerInParent="true"
        ProgressWheel:pwText="10"
        ProgressWheel:pwTextColor="#222"
        ProgressWheel:pwTextSize="14sp"
        ProgressWheel:pwRimColor="#e0e0e0"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:pwBarColor="#000"
        ProgressWheel:pwBarWidth="5dp"
        ProgressWheel:pwRimWidth="2dp"
        android:indeterminate="false"
        android:layout_gravity="center" />

</LinearLayout>
